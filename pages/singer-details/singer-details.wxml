    <navigator class='action' open-type="navigateBack" delta="1" hover-class="none">
      <text class='cuIcon-back'></text> 返回
    </navigator>
  </view>
</view>

<view class="new-bgImg bg-img padding-top-xl flex align-end" style="background-image: url('https://p1.music.126.net/nILBk4DaE3yV__25uq-5GQ==/18641120139241412.jpg');height: 500rpx;">
  <view class="padding padding-top-xl flex-sub text-white">
