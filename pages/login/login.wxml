<!--pages/login/login.wxml-->
<cu-custom bgColor="bg-gradual-green" isBack="{{true}}">
  <view slot="content">登录</view>
  <view slot="backText">返回</view>
</cu-custom>

<view class="cu-form-group margin-top">
  <view class="title">手机号</view>
  <input placeholder="两字短标题" data-name="phone" bindinput="onInput"></input>
</view>

<view class="cu-form-group">
  <view class="title">密码</view>
  <input placeholder="三字标题" data-name="psw" bindinput="onInput"></input>
</view>

<view class="padding flex flex-direction">
  <button class="cu-btn lines-olive shadow" bindtap="signin">登录</button>
</view>